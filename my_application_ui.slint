export component HelloWorld inherits Window {
    width: 400px;
    height: 400px;

    // Declare an alias that exposes the label's text property to C++
    in-out property my_label <=> label.text;

    label := Text {
       x: (parent.width - self.width)/ 2;
       y: (parent.height - self.height)/ 2;
       text: "Hello, world";
       color: blue;
    }
}